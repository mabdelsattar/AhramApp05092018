<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.abdelsattar.alahramapp">
    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature
        android:name="android.hardware.camera.any"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name="android.hardware.camera2.full" />
    <uses-permission android:name="android.hardware.camera.autofocus" />



    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/myicon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/myicon"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <activity android:name=".Ui.HomeActivity"   android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:name=".Ui.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:name=".Ui.AddRequestsActivity"
            android:label="@string/title_activity_requests"
            android:theme="@style/AppTheme" />
        <activity   android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden" android:name=".Ui.RequestFormActivity" />
        <activity   android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden" android:name=".Ui.ShowAllRequestsActivity" >


            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.MAIN" />-->
                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->

        </activity>
        <activity   android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden" android:name=".Ui.OrderdetailsActivity" />
        <activity   android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden" android:name=".CreatePdfActivity" />
        <activity   android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden" android:name=".Ui.AttachActivity"></activity>
    </application>

</manifest>