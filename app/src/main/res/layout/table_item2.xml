<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2"
    android:layout_margin="2dp"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="(2) "
            android:id="@+id/page2_item2Number"
            android:maxLines="1"
            android:minLines="1"
            android:textColor="@color/pageColor"
            android:textSize="10dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/page2_item2Number"
            android:text="..........................................................................................................................................................................................................................."
            android:maxLines="1"
            android:minLines="1"
            android:textColor="#000000"
            android:textStyle="bold"
            android:id="@+id/page2_item2"
            android:textSize="10dp"
            android:gravity="right"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="(1)"
            android:id="@+id/page2_item1Number"
            android:maxLines="1"
            android:minLines="1"
            android:textStyle="bold"
            android:textColor="@color/pageColor"
            android:textSize="10dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/page2_item1Number"
            android:text="..................................................................."
            android:maxLines="1"
            android:minLines="1"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/page2_item1"
            android:textSize="10dp"
            android:gravity="right"
            android:layout_centerVertical="true"/>
    </RelativeLayout>


</LinearLayout>
