<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:id="@+id/mycard"
    android:background="#EBEBEB"
        android:padding="15dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:padding="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                style="@style/Base.TextAppearance.AppCompat.Large"
                android:id="@+id/ordername"
                android:layout_toLeftOf="@+id/increase"
                android:layout_alignParentTop="true"
                android:text="LCDشاشffffffffffffffffffffffffffffffffffه" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:id="@+id/price"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_alignEnd="@+id/ordername"
                android:layout_alignRight="@+id/ordername"
                android:layout_below="@+id/ordername"
                android:layout_marginTop="11dp"
                android:text="800ريال" />

            <ImageView
                android:id="@+id/decrease"
                android:layout_width="35dp"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/increase"
android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/deleteiconmanager" />

            <ImageView
                android:id="@+id/increase"
                android:padding="5dp"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/decrease"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/editicon" />

            <TextView
                android:id="@+id/tvCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Base.TextAppearance.AppCompat.Large"
                android:text="0"
                android:visibility="invisible"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>