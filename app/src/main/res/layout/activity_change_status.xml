<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangeStatusActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomButtons">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/tv_deails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:padding="5dp"
                android:background="#D3D3D3"
                android:textColor="#113353"
                android:layout_centerHorizontal="true"
                android:text="تفاصيل عن الطلب"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_deails"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/bindRequestNum"
                        android:layout_height="wrap_content"
                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:text="58"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#113353"

                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:text="رقم الطلب:"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">



                    <Spinner
                        android:id="@+id/spinner_status"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#113353"

                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:text="حالة الطلب:"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/paidAmount"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:hint="ما تم دفعه"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#113353"
                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:text="ما تم دفعه"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/toBePaid"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:hint="المتبقي"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#113353"
                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:text="المبلغ المتبقي"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/bindRequestDate"
                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:text="22/01/2018"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#113353"

                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:text="تاريخ الطب:"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/bindRecieverName"
                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:text="محمد عبد الستار"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#113353"

                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:text="المستلم:"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/bindRecieverAddress"
                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:text="8 ض خالد بن الوليد-مصر الجديدة"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#113353"

                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:text="العنوان:"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/bindRecieverCity"
                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:text="القاهرة"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#113353"

                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:text="المحافظة:"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/bindRecieverPhone"
                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:text="01211804025"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#113353"

                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:text="جوال المستلم:"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/bindNotes"
                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:text="لا يوجد ملاحظات"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#113353"

                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:text="الملاحظات:"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:background="@drawable/my_custom_background"
                        android:layout_height="wrap_content"
                        android:id="@+id/bindItemsContainer"
                        android:orientation="vertical">



                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#113353"

                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:text="الطرود:"/>

                </LinearLayout>


            </LinearLayout>



        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:id="@+id/bottomButtons"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="حفظ"
            android:layout_margin="5dp"
            android:background="@color/barColor"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:onClick="save"
            android:id="@+id/save"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="إلغاء"
            android:layout_margin="5dp"
            android:background="@color/barColor"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:onClick="cancel"
            android:id="@+id/cancel"
            />
    </LinearLayout>
</RelativeLayout>